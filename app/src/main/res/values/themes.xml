<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Mobile_hw_1" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorSurface">@color/gray_600</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorPrimary">@color/transparent</item>
        <item name="colorSecondaryContainer">@color/circle_grid_arrow_inactive_bg</item>
    </style>

    <style name="bottomNav" parent="Widget.Material3.BottomNavigationView">
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnSurfaceVariant">@color/white</item>
        <item name="colorSecondaryContainer">@color/white</item>
        <item name="colorOnSecondaryContainer">@color/black</item>
        <item name="itemActiveIndicatorStyle">@style/bottomNavItem</item>
    </style>

    <style name="bottomNavItem" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnSurfaceVariant">@color/white</item>
        <item name="colorSecondaryContainer">@color/white</item>
        <item name="colorOnSecondaryContainer">@color/black</item>
    </style>

    <style name="Theme.Mobile_hw_1.chip_info" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipCornerRadius">16dp</item>
        <item name="chipStrokeColor">@color/transparent</item>
        <item name="chipStrokeWidth">0dp</item>
    </style>
    <style name="Theme.Mobile_hw_1.chip_info.textAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:fontFamily">@font/velasans_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Mobile_hw_1.defaults" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="circleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="roundedStat">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Theme.Mobile_hw_1.switch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="colorPrimary">@color/switch_track_checked</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorOutline">@color/circle_grid_arrow_inactive_bg</item>
        <item name="colorOutlineVariant">@color/circle_grid_arrow_inactive_bg</item>
        <item name="colorSurfaceContainerHighest">@color/white</item>

    </style>
    <style name="timePicker" parent="ThemeOverlay.Material3.MaterialTimePicker">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        <item name="colorPrimaryContainer">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>