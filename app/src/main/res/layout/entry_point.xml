<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/entry_point_gradient"
    android:orientation="vertical">


    <androidx.appcompat.widget.AppCompatButton
        android:theme="@style/Theme.Mobile_hw_1.defaults"
        android:id="@+id/login"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button_bg_solid_white_rounded"
        android:drawableStart="@drawable/google_logo"
        android:drawablePadding="16dp"
        android:gravity="center"
        android:paddingVertical="16dp"
        android:paddingStart="24dp"
        android:paddingEnd="80dp"
        android:text="@string/entry_via_google"
        android:fontFamily="@font/velasans_medium"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:flow_horizontalGap="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/gwen_trial_extrabold"
        android:text="@string/entry_greetings"
        android:textColor="@color/black"
        android:textSize="48sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>